<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/white"
    tools:context=".SecondFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">
    <TextView
        android:layout_marginTop="30dp"
        android:layout_marginLeft="3dp"
        android:textColor="@color/blue"
        android:layout_width="match_parent"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:text="Task Details"
        android:textSize="32sp"
        android:gravity="center" /> <!-- Center text horizontally -->

    <TextView
        android:layout_marginTop="50dp"
        android:layout_marginLeft="3dp"
        android:textColor="@color/blue"
        android:layout_width="match_parent"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:text="Name of the task"
        android:textSize="20sp"/>
    <EditText
        android:id="@+id/taskNameEditText"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textCapWords"
        android:hint="Task Name"
        android:textColorHint="@color/grey1"
        android:textColor="@color/black"/>
    <TextView
        android:layout_marginTop="40dp"
        android:layout_marginLeft="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/blue"
        android:textStyle="bold"
        android:text="Description of the task"
        android:textSize="20sp"/>
    <EditText
        android:id="@+id/taskDescriptionEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="Task Description"
        android:inputType="textCapWords"
        android:textColorHint="@color/grey1"
        android:textColor="@color/black"/>


    <!-- Add the "Select Date" button here -->
    <TextView
        android:layout_marginTop="40dp"
        android:layout_marginLeft="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/blue"
        android:textStyle="bold"
        android:text="Date of the task"
        android:textSize="20sp"/>
    <EditText
        android:id="@+id/taskDateEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Select Date"
        android:layout_marginTop="10dp"
        android:focusable="false"
        android:clickable="true"
        android:textColor="@color/black"
        android:inputType="none"
        android:textColorHint="@color/grey1"
        android:drawableRight="@drawable/baseline_calendar_month_24"
        android:drawablePadding="10dp"
        />


    <Button
        android:layout_marginTop="80dp"
        android:id="@+id/addButton"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Add Task"
        android:textColor="@color/white"
        android:backgroundTint="@color/blue"
        android:gravity="center_horizontal|center_vertical" />


    </LinearLayout>

</ScrollView>